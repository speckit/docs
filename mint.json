      "group": "Extensions",
      "pages": [
        "extensions/cicd-automation",
        "extensions/design-visualization",
        "extensions/specification-by-example"
      ]
    },
    {
      "group": "Development",
      "pages": [
        "development/environment-setup",
        "development/debugging",
        "development/contributing"
      ]
    }
  ],
  "footerSocials": {
    "x": "https://x.com/speckit",
    "github": "https://github.com/github/spec-kit",
    "linkedin": "https://www.linkedin.com/company/speckit"
  },
  "analytics": {
    "ga4": {
      "measurementId": "G-XXXXXXXXXX"
    }
  },
