    "indexHiddenPages": false
  },
  "feedback": {
    "thumbsRating": true,
    "suggestEdit": true,
    "raiseIssue": true
  },
  "search": {
    "prompt": "Search SpecKit documentation..."
  },
  "ignore": [
    ".specify/**",
    ".specify/**/*",
    "external/**/*",
    "specs/**/*",
    "scripts/**/*",
    "templates/**/*",
    "RESEARCH_FINDINGS.md",
    "SPEC_KIT_DOCUMENTATION_PLAN.md"
