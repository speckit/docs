  },
  "favicon": "/favicon.svg",
  "colors": {
    "primary": "#2563eb",
    "light": "#3b82f6",
    "dark": "#1d4ed8",
    "anchors": {
      "from": "#2563eb",
      "to": "#3b82f6"
    }
  },
  "topbarLinks": [
    {
      "name": "GitHub",
      "url": "https://github.com/github/spec-kit"
    }
  ],
